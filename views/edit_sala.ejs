<div class="col-md-8 offset-lg-1 pb-5 mb-2 mb-lg-4 pt-md-5 mt-n3 mt-md-0">
  <div class="ps-md-3 ps-lg-0 mt-md-2 py-md-4">
    <h1 class="h2 pt-xl-1 pb-3">Editar la Sala</h1>

    <form action="/update-sala" method="POST" class="needs-validation border-bottom pb-3 pb-lg-4" novalidate>
      <input type="hidden" name="id" id="id" value="<%= sala.id %>">
      <div class="row pb-2">
        <div class="col-12 mb-4">
          <label for="address1" class="form-label fs-base">Titulo</label>
          <input value="<%= sala.title %>" name="title" id="title" class="form-control form-control-lg"
            placeholder="Diagramador .." required>
        </div>

        <div class="col-12 mb-4">
          <label for="bio" class="form-label fs-base">Descripcion <small class="text-muted">(optional)</small></label>
          <textarea name="description" id="description" class="form-control form-control-lg" rows="4"
            placeholder="Agrega una Descripcion."> <%= sala.description %></textarea>
        </div>
      </div>
      <div class="d-flex mb-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
  </div>
</div>