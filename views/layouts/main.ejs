      <script>
  // Oculta el loader cuando la pÃ¡gina ha terminado de cargarse
  window.addEventListener('load', () => {
    const loader = document.getElementById('loadingModal');
    if (loader) {
      loader.classList.remove('active');
    }
  });

  // Permite mostrarlo manualmente desde otras vistas o botones
  function mostrarLoader() {
    const loader = document.getElementById('loadingModal');
    if (loader) {
      loader.classList.add('active');
    }
  }

  // Re-muestra el loader al hacer clic en enlaces o enviar formularios
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('a[href]:not([target="_blank"])').forEach(link => {
      link.addEventListener('click', function (e) {
        const href = this.getAttribute('href');
        if (href && !href.startsWith('#') && !href.startsWith('javascript:')) {
          mostrarLoader();
        }
      });
    });

    document.querySelectorAll('form').forEach(form => {
      form.addEventListener('submit', () => {
        mostrarLoader();
      });
    });
  });
</script>

